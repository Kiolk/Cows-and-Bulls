<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_move_number"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/bg_round"
        android:fontFamily="@font/product_sans_regular"
        android:textAlignment="center"
        android:textColor="@color/generalGray"
        android:textSize="20sp"
        tools:text="1" />

    <TextView
        android:id="@+id/tv_moveCombination"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="17dp"
        android:fontFamily="@font/product_sans_regular"
        android:textAlignment="center"
        android:textColor="@color/generalGray"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/iv_separator"
        android:layout_width="1dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:layout_marginEnd="17dp"
        android:background="@color/lightGray" />

    <ImageView
        android:id="@+id/iv_cow_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_marginEnd="5dp"
        android:src="@drawable/ic_cow" />

    <TextView
        android:id="@+id/tv_cows_count"
        android:layout_width="12dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:layout_marginEnd="17dp"
        android:fontFamily="@font/product_sans_regular"
        android:textAlignment="center"
        android:textColor="@color/generalGray"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/iv_bull_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_marginEnd="5dp"
        android:src="@drawable/ic_bull" />

    <TextView
        android:id="@+id/tv_bulls_count"
        android:layout_width="12dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:layout_marginEnd="157dp"
        android:fontFamily="@font/product_sans_regular"
        android:textAlignment="center"
        android:textColor="@color/generalGray"
        android:textSize="20sp" />

</LinearLayout>