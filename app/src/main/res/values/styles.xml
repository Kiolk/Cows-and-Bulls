<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/white</item>
        <item name="colorPrimary">@color/lightBlue</item>
        <item name="colorPrimaryDark">@color/generalBlue</item>
        <item name="colorAccent">@color/lightBlue</item>
    </style>

    <style name="AppTheme.DefaultText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/generalGray</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:background">@drawable/launcher_screen</item>
    </style>
</resources>
